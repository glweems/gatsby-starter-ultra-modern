{
  "compilerOptions": {
    "strict": true,
    "target": "esnext",
    "moduleResolution": "node",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "isolatedModules": true,
    "plugins": [
      {
        "name": "@divyenduz/ts-graphql-plugin"
      }
    ]
  },
  "include": [
    "src/**/*.tsx",
    "src/**/*.ts"
  ]
}
